{
  "name": "portfolio-frontend",
  "version": "1.3.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "prettier": "npx prettier . --write",
    "check": "npx prettier . --check && next lint",
    "prepare": "node .husky/install.mjs",
    "precommit": "npx prettier . --write && npm run lint",
    "cm": "git add . && npm run git:all &&  cz",
    "git:all": "git diff --cached --name-status --diff-filter=ACDMRTUXB*",
    "release": "semantic-release --no-ci"
  },
  "dependencies": {
    "@commitlint/types": "^19.0.3",
    "@heroicons/react": "^2.1.1",
    "axios": "^1.6.8",
    "dateformat": "^5.0.3",
    "framer-motion": "^11.0.8",
    "husky": "^9.0.11",
    "next": "14.1.4",
    "noisejs": "^2.1.0",
    "react": "^18",
    "react-animated-numbers": "^0.18.0",
    "react-dom": "^18",
    "react-type-animation": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.2",
    "@semantic-release/npm": "^12.0.0",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "autoprefixer": "^10.0.1",
    "commitizen": "^4.3.0",
    "commitlint": "^19.2.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "cz-conventional-changelog": "^3.3.0",
    "cz-gitmoji-adapter": "^2.0.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "3.2.5",
    "semantic-release-config-gitmoji": "^1.5.3",
    "semantic-release-gitmoji": "^1.6.5",
    "tailwindcss": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-gitmoji-adapter",
      "useEmoji": true
    },
    "cz-gitmoji-adapter": {
      "scopes": [
        "login",
        "api",
        "auth",
        "ci/cd",
        "infrastructure",
        "deployment",
        "backup",
        "recovery",
        "release",
        "init",
        "runner",
        "watcher",
        "config",
        "web-server",
        "proxy"
      ],
      "questions": {
        "scope": "Specify a scope: "
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhavir/portfolio-frontend"
  },
  "bugs": {
    "url": "https://github.com/zhavir/portfolio-frontend/issues"
  },
  "homepage": "https://github.com/zhavir/portfolio-frontend#readme",
  "publishConfig": {
    "access": "restricted"
  }
}
